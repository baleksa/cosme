<!doctype html>
{% extends "layout.html" %}
{% block title %}Hello from Flask{% endblock %}
{% block head %}
  {{ super() }}
  <style type="text/css">
    .important { color: #336699; }
  </style>
{% endblock %}
{% block content %}
  {% if person %}
  <h1>Hello {{ person }}!</h1>
  {% else %}
  <h1>Hello, World!</h1>
  {% endif %}
{% endblock %}
